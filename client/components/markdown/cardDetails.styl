@import 'nib'

.card-markdown
  padding: 0 20px
  height: 100%
  flex-shrink: 0
  flex-basis: 600
  will-change: flex-basis
  overflow: hidden
  background: darken(white, 3%)
  border-radius: bottom 3px
  z-index: 20 !important
  animation: flexGrowIn 0.1s
  box-shadow: 0 0 7px 0 darken(white, 30%)
  transition: flex-basis 0.1s

  .card-markdown-canvas
    width: 600px

  .card-markdown-header
    margin: 0 -20px 5px
    padding 7px 16px
    background: darken(white, 7%)
    border-bottom: 1px solid darken(white, 14%)

    .close-card-markdown,
    .card-markdown-menu
      float: right

    .close-card-markdown
      font-size: 24px
      padding: 5px
      margin-right: -8px

    .card-markdown-menu
      font-size: 17px
      padding: 10px

    .card-markdown-title
      font-weight: bold
      font-size: 1.33em
      margin: 7px 0 0
      padding: 0

    form.inlined-form
      margin-top: 5px
      margin-bottom: 10px

    .card-markdown-list
      font-size: 0.85em
      margin-bottom: 3px

      a.card-markdown-list-title
        font-weight: bold

        &.is-editable
          display: inline-block
          background: darken(white, 10%)
          border-radius: 3px
          padding: 0px 5px

  .card-description textarea
    min-height: 100px

  .card-markdown-items
    display: flex
    margin: 15px 0

    .card-markdown-item
      &.card-markdown-item-labels,
      &.card-markdown-item-members
        width: 50%
        flex-shrink: 1

  .card-markdown-item-title
    font-size: 14px
    color: darken(white, 45%)

  .card-label
    padding-top: 5px
    padding-bottom: 5px

  .activities
    padding-top: 10px

  textarea
    visibility: hidden
    height: 1px
    transition: background 85ms ease-in,
          border-color 85ms ease-in
    resize: vertical
    width: 100%

    &.editor
      resize: none
      padding-bottom: 22px

input[type="text"].attachment-add-link-input
  float: left
  margin: 0 0 8px
  width: 80%

input[type="submit"].attachment-add-link-submit
  float: left
  margin: 0 0 8px 4px
  padding: 6px 12px
  width: 18%
