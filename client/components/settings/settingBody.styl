.flex
  display: -webkit-box
  display: -moz-box
  display: -webkit-flex
  display: -moz-flex
  display: -ms-flexbox
  display: flex

.setting-content
  color: #727479
  background: #dedede
  width 100%
  position: absolute;


  .content-title
    font-size 20px
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1)
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.3);

  .content-body
    display flex
    padding-top 15px
    height 100%
    gap: 10px;

    .side-menu
      //background-color: #f7f7f7;
      //border: 1px solid #f0f0f0;
      //border-radius: 4px;
      width: 250px;
      //box-shadow: inset -1px -1px 3px rgba(0,0,0,.05);
      background: rgba(255, 255, 255, 0.2)
      border-radius: 16px
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1)
      backdrop-filter: blur(5px) !important
      -webkit-backdrop-filter: blur(5px) !important
      border: 1px solid rgba(255, 255, 255, 0.3)
      padding: 8px 8px 8px 8px

      ul

        li
          margin: 0.1rem 0.2rem;

          &.active
            background #fff
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.3);

          &:hover
            background #fff
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);

          a
            @extends .flex
            padding: 1rem 0 1rem 1rem
            width: 100% - 5rem

            span
              font-size: 13px

            i
              margin-right: 20px

    .main-body
      -webkit-user-select: text // Safari 3.1+
      -moz-user-select: text // Firefox 2+
      -ms-user-select: text // IE 10+
      user-select: text // Standard syntax

      ul
        li
          padding: 0.5rem 0.5rem;

          a
            .is-checked
              border-bottom: 2px solid rgb(62, 220, 142);
              border-right: 2px solid rgb(62, 220, 142);

            span
              padding: 0 0.5rem

          .admin-announcement,
          .invite-people,
          .layout
            padding-left 20px;
            li
              min-width: 500px;

              ul.no-margin-bottom
                margin-bottom: 0;

              .bg-white
                a
                  background  #f7f7f7
                  &.is-checked
                    //background #fff
                    background:#f4f4f4

          input[type=radio]
            margin: 4px

.option
  @extends .flex
  -webkit-border-radius: 3px;
  border-radius: 3px;
  background: #fff;
  text-decoration: none;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  margin-top: 5px;
  padding: 5px;

.title
  font-weight 500;
  margin-bottom 0.5rem;
.description
  margin-bottom 0.5rem;
.bg-white
  background #f9fbfc;

